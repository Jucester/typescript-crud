<div class="row mt-10">
    {{#each tasksList }}
            <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">                                                    
                                <h1> {{ title }} </h1>
                                <p> {{ description }} </p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                    <a href="/tasks/delete/{{ _id }}" class="btn btn-danger"> Delete </a>
                                    <a href="/tasks/edit/{{ _id }}" class="btn btn-primary"> Edit </a>
                            </div>
                        </div>
            </div>
    {{/each }}
</div>